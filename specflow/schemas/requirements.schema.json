{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codex/specflow/requirements.schema.json",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "functionalRequirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^RQ-\\d{2}$" },
          "title": { "type": "string" }
        },
        "required": ["id", "title"]
      }
    }
  },
  "required": ["meta"]
}
