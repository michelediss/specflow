{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codex/specflow/stack.schema.json",
  "type": "object",
  "properties": {
    "runtime": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "testing": {
      "type": "object",
      "properties": {
        "runner": { "type": "string" }
      }
    }
  },
  "required": ["runtime"]
}
