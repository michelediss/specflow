{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codex/specflow/spec.schema.json",
  "type": "object",
  "properties": {
    "meta": { "type": "object" },
    "useCases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^UC-\\d{2}$" },
          "title": { "type": "string" }
        },
        "required": ["id", "title"]
      }
    },
    "acceptanceCriteria": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^AC-\\d{2}$" },
          "useCase": { "type": "string" },
          "tests": {
            "type": "array",
            "items": { "type": "string" }
          },
          "manualTests": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "status": { "type": "string", "enum": ["pending", "pass", "fail"] },
                "notes": { "type": "string" },
                "updatedAt": { "type": "string" }
              },
              "required": ["name", "status"]
            }
          },
          "externalTests": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "environment": { "type": "string" },
                "status": { "type": "string", "enum": ["pending", "pass", "fail"] },
                "evidence": { "type": "string" },
                "updatedAt": { "type": "string" }
              },
              "required": ["name", "status"]
            }
          }
        },
        "required": ["id", "useCase"],
        "anyOf": [
          { "required": ["tests"] },
          { "required": ["manualTests"] },
          { "required": ["externalTests"] }
        ]
      }
    }
  },
  "required": ["meta", "useCases", "acceptanceCriteria"]
}
